{# templates/pagination.html.twig #}
<div class="pagination">
    <ul class="inline-flex items-center -space-x-px">
        {% if pagination.hasPreviousPage %}
            <li>
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({(pagination.pageParameterName): pagination.previousPage})) }}" class="py-2 px-3 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                    &laquo;
                </a>
            </li>
        {% endif %}

        {% for page in pagination.pagesInRange %}
            <li>
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({(pagination.pageParameterName): page})) }}" class="py-2 px-3 leading-tight {{ page == pagination.currentPage ? 'text-white bg-blue-600 border-blue-600' : 'text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white' }}">
                    {{ page }}
                </a>
            </li>
        {% endfor %}

        {% if pagination.hasNextPage %}
            <li>
                <a href="{{ path(app.request.attributes.get('_route'), app.request.query.all|merge({(pagination.pageParameterName): pagination.nextPage})) }}" class="py-2 px-3 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                    &raquo;
                </a>
            </li>
        {% endif %}
    </ul>
</div>
