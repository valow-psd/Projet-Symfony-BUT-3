{# templates/event/subscribed.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Subscribed Events{% endblock %}

{% block body %}
    <div class="min-h-screen">
        <!-- Badge and Title -->
        <div class="text-center mb-8">
            <span class="bg-yellow-300 text-xs font-bold py-1 px-3 rounded-full text-gray-900 text-uppercase">MY SUBSCRIPTIONS</span>
            <h2 class="mt-4 text-5xl font-bold text-gray-900">Subscribed Events</h2>
            <p class="mt-2 text-gray-600">Here are the events you have subscribed to.</p>
        </div>

        <section class="flex items-center justify-center">
            <div class="w-full max-w-7xl dark:border dark:bg-gray-800 dark:border-gray-700">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    {% if registrations is not empty %}
                        <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4 justify-center">
                            {% for registration in registrations %}
                                <div class="w-full max-w-sm mx-auto bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
                                    <div class="p-5">
                                        <h3 class="text-xl font-bold text-gray-900">{{ registration.event.title }}</h3>
                                        <p class="text-gray-500">{{ registration.event.description }}</p>
                                        <p class="text-gray-700"><strong>Amount:</strong> {{ registration.amount }} USD</p>
                                        <p class="text-gray-700"><strong>Unique Code:</strong> {{ registration.uniqueCode }}</p>
                                        <p class="text-gray-700"><strong>Registered by:</strong> {{ registration.user.email }}</p>
                                        <div class="text-right">
                                            <div class="text-3xl font-bold text-red-500">{{ registration.event.date|date('d') }}</div>
                                            <div class="text-gray-500">{{ registration.event.date|date('F') }}</div>
                                            <div class="text-gray-400 text-sm">{{ registration.event.date|date('h:i A') }}</div>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-gray-700 dark:text-gray-400">You are not subscribed to any events.</p>
                    {% endif %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
