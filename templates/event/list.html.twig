{% extends 'base.html.twig' %}

{% block title %}Event List{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Event List</h1>
    <div class="grid gap-6 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-4">
        {% for event in pagination %}
            <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow-md dark:bg-gray-800 dark:border-gray-700">
                <div class="p-5">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                        <a href="{{ path('event_detail', {'id': event.id}) }}">{{ event.title }}</a>
                    </h5>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ event.description }}</p>
                    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ event.date|date('Y-m-d H:i') }}</p>
                    <a href="{{ path('event_detail', {'id': event.id}) }}" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center inline-flex items-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                        Read more
                        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                        </svg>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="navigation mt-6">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
